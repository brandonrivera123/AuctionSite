@{
    ViewBag.Title = "NewTransaction";
}

<h2>Create a New Transaction</h2>

<form method="post">
	<div class="form-group">
		<label for="item">Item:</label>
		<select class="form-control" id="item" required>
			<option value="" selected disabled>Select an Item</option>
			<option value="option1">Option 1</option>
			<option value="option2">Option 2</option>
			<option value="option3">Option 3</option>
		</select>
	</div>
	
	<div class="form-group">
		<label for="fname">Guest First Name:</label>
		<input class="form-control" type="text" id="fname" placeholder="First Name" required/>
	</div>

	<div class="form-group">
		<label for="lname">Guest Last Name:</label>
		<input class="form-control" type="text" id="lname" placeholder="Last Name" required/>
	</div>
	
	<div class="form-group">
		<label for="email">Guest Email:</label>
		<input class="form-control" type="email" id="email" placeholder="Email" required/>
	</div>
	
	<div class="form-group">
		<label for="phone">Guest Phone:</label>
		<input class="form-control" type="tel" id="phone" placeholder="Phone" required/>
	</div>

	<button class="btn btn-primary" type="button" id="cancel" onclick="window.location.href='@Url.Action("Transactions")'">Cancel</button>
	<button class="btn btn-primary" type="reset" id="clear">Clear</button>
	<button class="btn btn-primary" type="submit" id="create">Create</button>
</form>